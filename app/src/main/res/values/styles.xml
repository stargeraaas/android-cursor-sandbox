<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TextAppearances для Title и Subtitle -->
    <style name="TextAppearance.PC.Title.Focused" parent="@android:style/TextAppearance.Material.Headline">
        <item name="android:textColor">#F5000000</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>

    </style>

    <style name="TextAppearance.PC.Title.Unfocused" parent="@android:style/TextAppearance.Material.Headline">
        <item name="android:textColor">#F5FFFFFF</item>
        <item name="android:fontWeight">400</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.PC.Subtitle.Focused" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textColor">#8F000000</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.PC.Subtitle.Unfocused" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textColor">#8FFFFFFF</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
